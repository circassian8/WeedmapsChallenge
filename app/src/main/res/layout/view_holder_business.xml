<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ivBusinessImage"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:adjustViewBounds="true" app:layout_constraintDimensionRatio="1:1" android:scaleType="centerCrop"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle" app:layout_constraintStart_toStartOf="@+id/ivBusinessImage"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivBusinessImage" tools:text="Title"
            app:layout_constraintEnd_toEndOf="@+id/ivBusinessImage" android:textStyle="bold"
            android:textColor="@android:color/black" android:maxLines="1" android:ellipsize="end"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvReview" app:layout_constraintStart_toStartOf="@+id/ivBusinessImage"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvTitle" tools:text="Review"
            android:maxLines="2" android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ivBusinessImage" android:ellipsize="end"/>
</androidx.constraintlayout.widget.ConstraintLayout>